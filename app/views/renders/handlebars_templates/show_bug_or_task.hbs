<div class="tuggler_shell bg_1">
  <p class="indi_thing_title">{{title}}</p>
  <div class="tuggler_nav_icon_right tuggler_icon_back tuggler_icon" id="tuggler_back_btn"></div>
  <hr class="tuggler_line_1">
  <p class="indi_thing_description">{{description}}</p>
  <hr class="tuggler_line_1">

  {{#each screenshots}}
    <a class="open_full_screenshot_view" href="javascript:" data-image-url="http://localhost:3000/screenshots/{{image_url}}.png"><img src="http://localhost:3000/screenshots/{{image_url}}.png"></a>
  {{/each}}

  <hr class="tuggler_line_1">
  <p>Assigned to: Jordan<p>
    <hr class="tuggler_line_1">
  <div class="tuggler_comments_section">

    {{#each comments}}

    <p>{{content}}<span>-Jordan</span></p>
    <hr>

    {{/each}}

    <textarea placeholder="Comment"></textarea>
  </div>
  <button class="button button_1 bg_2 own_line_button_with_space">Comment</button><br>
  <button class="button button_1 bg_2 own_line_button_with_space">Status</button><br>
  <button class="button button_1 bg_4 own_line_button_with_space">Save</button>
</div>
