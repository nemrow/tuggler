<h1>Tuggler</h1>

<% if @logged_in %>

  <h1>You Are Logged In</h1>
  <p>USER ID: <%= @user.id %></p>

<% else %>

  <h1>Signup</h1>
  <%= form_for @user do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.submit %>
  <% end %>

  <h1>Login</h1>
  <%= form_for @user, :url => 'sessions/create', :method => :get do |f| %>
    <%= f.text_field :email %>
    <%= f.password_field :password %>
    <%= f.submit %>
  <% end %>

<% end %>